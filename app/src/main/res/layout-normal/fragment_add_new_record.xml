<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.accounts.newwalletapp.AddNewRecordActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical">


        <Spinner
            android:id="@+id/spinnerAddNewEntryAccounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="left"

            style="@android:style/Widget.Holo.Light.Spinner"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="10">

            <EditText
                android:id="@+id/editTextAddNewEntryEnterAmmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:inputType="numberDecimal"
                android:hint="@string/enter_amount"
                android:layout_marginBottom="-11dp" />

            <Spinner
                android:id="@+id/spinnerAddNewEntryCurrency"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:ellipsize="marquee"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_weight="5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:weightSum="10">

            <Spinner
                android:id="@+id/spinnerAddNewEntryCaregory"
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_weight="5"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_gravity="center_horizontal"
                android:hint="@string/enter_amount"/>

            <Button
                android:id="@+id/buttonAddNewEntryIncomeExpence"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_gravity="top"
                android:background="@drawable/roundbutton"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:drawableRight="@drawable/ic_button_plus"
                android:layout_weight="5" />

        </LinearLayout>

        <EditText
            android:id="@+id/editTextAddNewEntryDescription"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="@string/description"
            android:inputType="textMultiLine" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:weightSum="10">


            <Button
                android:id="@+id/buttonAddNewEntryTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="5"
                android:drawableRight="@drawable/ic_button_clock" />

            <Button
                android:id="@+id/buttonAddNewEntryDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="5"
                android:singleLine="true"
                android:drawableRight="@drawable/ic_button_calender" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
