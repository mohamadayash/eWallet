<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="newwalletapp.fragmentsmain.FragmentAddBudget">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">


        <Spinner
            android:id="@+id/spinnerAddBudgetAccounts"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"

            android:gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"

            android:weightSum="10">

            <EditText
                android:id="@+id/editTextAddBudgetEnterAmmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="5"
                android:inputType="numberDecimal"
                android:hint="@string/enter_amount" />

            <EditText
                android:id="@+id/editTextAddBudgetName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="5"
                android:inputType="text"
                android:hint="@string/enter_name" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"

            android:weightSum="10">

            <Button
                android:id="@+id/buttonAddBudgetCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/select_category"
                android:layout_gravity="bottom"
                android:layout_marginRight="5dp"
                android:layout_weight="5" />

            <Spinner
                android:id="@+id/spinnerAddBudgetInterval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_marginRight="5dp"
                android:layout_weight="5" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
