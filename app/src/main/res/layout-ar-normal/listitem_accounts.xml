<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"


    android:weightSum="1">



    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:layout_marginRight="10dp"
            android:id="@+id/textViewAccountsName"
            android:gravity="right|center_vertical"
            android:layout_weight="0.95" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="3dp"

            android:clickable="true"
            android:id="@+id/imageViewAccountsEdit"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_gravity="center" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageViewAccountsDelete"
            android:background="@drawable/abc_list_selector_holo_light"
            android:src="@android:drawable/ic_menu_delete"
            android:clickable="true"
            android:padding="3dp"
            android:layout_gravity="center"
            android:contentDescription="Edit Account" />

    </LinearLayout>





</LinearLayout>